@model GridCollectionItemViewModel

<section class="collection-item">
<a asp-controller="products" asp-action="details" asp-route-articleNumber="@Model.Id" class="item">
    <div class="image"> <img src="/images/products/@Model.ImageUrl" alt="@Model.Title"></div>
    <div class="body">
        <div class="title">
            @Model.Title
        </div>
        <div class="info">
            <div class="price">$@Model.Price</div>
            <i class="add-cart fa-regular fa-cart-plus"></i>
        </div>
    </div>
</a>
</section>