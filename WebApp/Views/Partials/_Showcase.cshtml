
@{
    var showcase = showcaseService.GetShowcase();
}

@if (showcase!=null)
{
    <section class="showcase">
            <div class="container">
                <div class="content">
                <div class="ingress">@showcase.Ingress</div>
                <div class="title">@showcase.Title</div>
                @if (!string.IsNullOrEmpty(showcase.Button.Url) && !string.IsNullOrEmpty(showcase.Button.LinkText))
                {
                        <a href="@showcase.Button.Url" class="btn-theme">@showcase.Button.LinkText</a>

                }


                </div>
                <div class="content-image">
                <img src="@showcase.ImageUrl" alt="@showcase.Title">
                </div>
            </div>
        </section>
}
