@model LoginViewModel	

@{ViewData["Title"]="Login to your Account";}

<div class="container">
	<section class="breadcrumb">
		<div class="container">
			<div class="content">
				<h1>@ViewData["Title"]</h1>	
			</div>
		</div>
	</section>

	<section class="login-form">
		<div class="container">
			<div class="title">@ViewData["Title"]</div>
			<form method="post" novalidate asp-route-ReturnUrl="@Model.ReturnUrl">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			
				<div class="name form-group">
					<label asp-for="Email" class="form-label">Email Address*
						<a asp-action="Index" asp-controller="register" class="text-danger">Don't have an account yet?</a>
					</label>
					<input asp-for="Email" class="form-control" />
					<small><span asp-validation-for="Email" class="text-danger"></span></small>
				</div>
				<div class="password form-group">
					<label asp-for="Password" class="form-label"></label>
					<input asp-for="Password" class="form-control" />
					<small><span asp-validation-for="Password" class="text-danger"></span></small>
				</div>
				<div class="rememberme form-checkbox-group">
					<label class="custom-checkbox">
						<label asp-for="RememberMe"></label>
						<input asp-for="RememberMe" />
						<span class="checkmark"></span>
					</label>
				</div>
					<button type="submit" class="btn btn-success mt-2">Log In</button>		
			</form>
		</div>
	</section>
</div>
