@model RoleViewModel
@{
	ViewData["Title"] = "Add";
	var users = ViewBag.Users as List<AppIdentityUser>;
}
<partial name="~/Views/Partials/_Breadcrumb.cshtml" />

<h1>Add Roles</h1>
<form role="form" method="post" asp-action="Add">
	<div asp-validation-summary="ModelOnly"></div>
	<input type="hidden" name="Type" value="@ViewBag.Type" />
	<div class="form-group row">
		<label class="col-sm-2 col-form-label" asp-for="RoleName"></label>
		<div class="col-sm-10">
			<input type="text" class="form-control" asp-for="RoleName" />
		</div>
		<span asp-validation-for="RoleName"></span>
	</div>
	<button type="submit" class="btn-primary">Submit</button>
</form>
