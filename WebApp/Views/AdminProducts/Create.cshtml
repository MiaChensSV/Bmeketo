@model ProductRegistrationViewModel

@{
	ViewData["Title"] = "Register Product";
}

<partial name="~/Views/Partials/_Breadcrumb.cshtml" />
<section class="registerproduct-form">
	<div class="bg-body-tertiary container">
		<form method="post" enctype="multipart/form-data" novalidate>
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="title form-group">
				<label asp-for="Title">Title</label>
				<input asp-for="Title" />
				<span asp-validation-for="Title" class="small text-danger"></span>
			</div>
			<div class="description form-group">
				<label asp-for="Description">Description</label>
				<textarea asp-for="Description"></textarea>
				<span asp-validation-for="Description" class="small text-danger"></span>
			</div>
			<div class="price form-group">
				<label asp-for="Price"></label>
				<input asp-for="Price" />
				<span asp-validation-for="Price" class="small text-danger"></span>
			</div>
			<div class="imagefile form-group">
				<label asp-for="ImageFile"></label>
				<input asp-for="ImageFile" />
				<span asp-validation-for="ImageFile" class="small text-danger"></span>
			</div>
			<div class="category form-group">
				<label asp-for="CategoryName"></label>
				<input asp-for="CategoryName" />
				<span asp-validation-for="CategoryName" class="small text-danger"></span>
			</div>
			<div class="tag form-group">
				@foreach (SelectListItem tag in ViewBag.Tags)
				{
					<div class="mb-2">
						<input type="checkbox" name="Tags" id="tag-@tag.Text-@tag.Value" value="@tag.Value" checked="@tag.Selected" class="form-checkbox-group" />
						<label for="tag-@tag.Text-@tag.Value" class="form-checkbox-group">@tag.Text</label>
					</div>
				}
			</div>
			<div class="button">
				<button class="btn btn-secondary py-2">Register</button>
			</div>

		</form>
	</div>
</section>