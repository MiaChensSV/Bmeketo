@model IEnumerable<ProductEntity>

@{ViewData["Title"]="All Products";}

<partial name="~/Views/Partials/_Breadcrumb.cshtml" />
<div class="container mt-5">
	@foreach(var item in Model){
		<div class="d-flex justify-content-between align-items-center">
			<div class="mb-3 d-flex align-items-center">
				<img src="/images/placeholders/@item.ImageUrl" alt="@item.Title" />
				<div class="ms-2">
					<div class="display-6"><strong>@item.Title</strong></div>
					<div>@item.Description</div>
				</div>
			</div>
			<div>
				<a asp-route-id="@item.Id" asp-action="edit" asp-controller="adminproducts" class="btn-theme" style="text-decoration:none"> Update</a>
				<a asp-route-id="@item.Id" asp-action="remove" asp-controller="adminproducts" class="btn-theme" style="text-decoration:none">delete</a>
			</div>
		</div>
	}
</div>
