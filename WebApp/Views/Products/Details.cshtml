@model ProductModel

@{ViewData["Title"]="Product Details";}
<partial name="~/Views/Partials/_Breadcrumb.cshtml" />
<section class="product-detail">
	<div class="container">
		<div class="body">
			<img class="product-img" src="@Model.ImageUrl" alt="@Model.Title"/>
			<div class="info">
				<div class="short-description">
					<h1 class="title">@Model.Title</h1>
					<div >@Model.Description</div>
					<hr class="hr" >
				</div>
				<div class="price">$ @Model.Price</div>
				<div class="shoppingcart">
					<div class="quantity">
						<button class="btn btn-link px-2 minus">	
							<i class="fas fa-minus"></i>
						</button>
						<input min="1" type="number" value="1" class="number"/>
						<button class="btn btn-link px-2 plus">
							<i class="fas fa-plus"></i>
						</button>
					</div>
					<button class="btn btn-theme button">Add to Cart <i class="add-cart fa-regular fa-cart-plus"></i></button>
					<hr class="hr">
				</div>
				
				<button class="add-wish">Add to wishlist</button>
				
				<div>Category: @Model.CategoryName</div>
			</div>
		</div>
		<div class="description">
			<h1 class="title">DESCRIPTION</h1>
			<div>@Model.Description</div>
		</div>
	</div>
</section>